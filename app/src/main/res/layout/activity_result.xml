<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/bmi"
        android:scaleType="centerCrop"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bmi"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:id="@+id/bmiResult"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bmi"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:id="@+id/showScore"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bmi"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:id="@+id/showClassification"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:id="@+id/view1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/bmiResult"
        android:id="@+id/view2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/showScore"
        android:id="@+id/view3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/showClassification"
        android:id="@+id/view4"/>
</androidx.constraintlayout.widget.ConstraintLayout>